{
    "compilerOptions": {
      "target": "ES5",     
      "module": "commonjs",     
      "strict": true,           
      "noImplicitAny": true,    
      "esModuleInterop": true,  
      "forceConsistentCasingInFileNames": true, 
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/"
    ],
    "exclude": [
      "node_modules"  
    ]
  }